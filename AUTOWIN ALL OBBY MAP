-- Hi·ªáu ·ª©ng 7 m√†u
local colors = {
    Color3.fromRGB(255,0,0),
    Color3.fromRGB(255,127,0),
    Color3.fromRGB(255,255,0),
    Color3.fromRGB(0,255,0),
    Color3.fromRGB(0,0,255),
    Color3.fromRGB(75,0,130),
    Color3.fromRGB(148,0,211)
}
task.spawn(function()
    local i = 1
    while task.wait(0.2) do
        ThankYou.TextColor3 = colors[i]
        i = i + 1
        if i > #colors then i = 1 end
    end
end)

-- H√†m t√¨m ƒë√≠ch universal
local function FindGoal()
    Overlay.Visible = true
    task.wait(1.5)

    local plr = game.Players.LocalPlayer
    local char = plr.Character or plr.CharacterAdded:Wait()
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then return end

    local finishPart = nil
    local farthestDist = 0

    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") then
            local name = string.lower(obj.Name)
            if string.find(name,"finish") or string.find(name,"end") or string.find(name,"goal") or string.find(name,"win") then
                finishPart = obj
                break
            end

            local dist = (obj.Position - root.Position).Magnitude
            if dist > farthestDist then
                farthestDist = dist
                finishPart = obj
            end
        end
    end

    Overlay.Visible = false
    if finishPart then
        root.CFrame = finishPart.CFrame + Vector3.new(0,5,0)
        ThankYou.Visible = true
        task.wait(1.5)
        ThankYou.Visible = false
    else
        warn("‚ö† Kh√¥ng t√¨m th·∫•y ƒë√≠ch n√†o!")
    end
end

-- N√∫t Auto Win
Button.MouseButton1Click:Connect(function()
    FindGoal()
end)

-- Auto Loop fix
local autoLoop = false
local loopThread

LoopButton.MouseButton1Click:Connect(function()
    autoLoop = not autoLoop
    if autoLoop then
        LoopButton.Text = "üîÅ Auto Loop: ON"
        LoopButton.BackgroundColor3 = Color3.fromRGB(20,80,20)

        loopThread = task.spawn(function()
            while autoLoop do
                pcall(function()
                    FindGoal()
                end)
                task.wait(3) -- delay gi·ªØa m·ªói l·∫ßn loop
            end
        end)
    else
        LoopButton.Text = "üîÅ Auto Loop: OFF"
        LoopButton.BackgroundColor3 = Color3.fromRGB(80,20,20)
        autoLoop = false
    end
end)
