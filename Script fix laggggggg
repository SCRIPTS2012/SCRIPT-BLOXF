-- MZ HUB - Tự động xóa toàn bộ hiệu ứng, hoạt ảnh, tăng FPS

pcall(function()
    -- Xóa hiệu ứng ánh sáng
    local Lighting = game:GetService("Lighting")
    Lighting.FogEnd = 100000
    Lighting.Brightness = 0
    Lighting.GlobalShadows = false
    Lighting.ClockTime = 12

    -- Xóa hiệu ứng hình ảnh trong Lighting
    for _, v in pairs(Lighting:GetChildren()) do
        if v:IsA("PostEffect") or v:IsA("Atmosphere") or v:IsA("BloomEffect") 
        or v:IsA("ColorCorrectionEffect") or v:IsA("SunRaysEffect") then
            v:Destroy()
        end
    end

    -- Xóa decal, texture, particle, smoke, trail, fire, mesh, animate
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("Decal") or v:IsA("Texture") or v:IsA("ParticleEmitter") 
        or v:IsA("Trail") or v:IsA("Smoke") or v:IsA("Fire") 
        or v:IsA("Beam") or v:IsA("Animation") or v:IsA("Animator") then
            v:Destroy()
        elseif v:IsA("BasePart") then
            v.Material = Enum.Material.SmoothPlastic
            v.Reflectance = 0
            v.CastShadow = false
        elseif v:IsA("MeshPart") then
            v.TextureID = ""
        end
    end

    -- Xóa hoạt ảnh của nhân vật
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Character and player.Character:FindFirstChild("Animate") then
            player.Character.Animate:Destroy()
        end
    end

    -- Giảm đồ họa tổng thể
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
end)

print("MZ HUB: Tự động xóa hiệu ứng, hoạt ảnh, đã bật chế độ siêu giảm lag.")
